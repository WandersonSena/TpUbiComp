<partial name="~/Views/Shared/_PrivateNavbar.cshtml" />

<div class="pt-5 pb-5">
    <div class="container xl-container">
        <!-- Content -->
        <div class="row mt-0 mt-md-4">
            <div class="col-lg-12 col-md-12 col-12">
                <!-- Card -->
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header">
                        <h3 class="mb-0">Detalhes do perfil</h3>                        
                    </div>
                    <!-- Card body -->
                    <div class="card-body">
                        <div class="d-lg-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center mb-4 mb-lg-0">
                                <img src="~/images/avatar-18.jpg" id="img-uploaded" class="avatar-xl rounded-circle" alt="">
                                <div class="ml-3">
                                    <h4 class="mb-0">Seu avatar</h4>
                                    <p class="mb-0">
                                        PNG ou JPG menor do que 800px de altura e largura.
                                    </p>
                                </div>
                            </div>
                            <div>
                                <a href="#!" class="btn btn-outline-white btn-sm">Atualizar</a>
                                <a href="#!" class="btn btn-outline-danger btn-sm">Remover</a>
                            </div>
                        </div>
                        <hr class="my-5">
                        <div>
                            <h4 class="mb-0">Detalhes do cadastro</h4>
                            <p class="mb-4">
                                Edite seus dados de cadastro.
                            </p>
                            <!-- Form -->
                            <form class="form-row">
                                <!-- First name -->
                                <div class="form-group col-12 col-md-6">
                                    <label class="form-label" for="fname">Nome</label>
                                    <input type="text" id="fname" class="form-control" placeholder="First Name" required="">
                                </div>
                                <!-- Last name -->
                                <div class="form-group col-12 col-md-6">
                                    <label class="form-label" for="lname">Sobrenome</label>
                                    <input type="text" id="lname" class="form-control" placeholder="Last Name" required="">
                                </div>
                                <!-- Phone -->
                                <div class="form-group col-12 col-md-6">
                                    <label class="form-label" for="phone">Telefone</label>
                                    <input type="text" id="phone" class="form-control" placeholder="Phone" required="">
                                </div>
                                <!-- Birthday -->
                                <div class="form-group col-12 col-md-6">
                                    <label class="form-label" for="birth">Data de nascimento</label>
                                    <input class="form-control" type="date" placeholder="Birth of Date" id="birth" name="birth" readonly="readonly">
                                </div>
                                <!-- Address -->
                                <div class="form-group col-12 col-md-6">
                                    <label class="form-label" for="address">Endereço</label>
                                    <input type="text" id="address" class="form-control" placeholder="Address" required="">
                                </div>
                                <!-- State -->
                                <div class="form-group col-12 col-md-6">
                                    <label class="form-label">Estado</label>
                                    <div class="dropdown bootstrap-select" style="width: 100%;">
                                        <select class="selectpicker" data-width="100%">
                                            <option value="">Select State</option>
                                            <option value="1">Gujarat</option>
                                            <option value="2">Rajasthan</option>
                                            <option value="3">Maharashtra</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Country -->
                                <div class="form-group col-12 col-md-6">
                                    <label class="form-label">Páis</label>
                                    <div class="dropdown bootstrap-select" style="width: 100%;">
                                        <select class="selectpicker" data-width="100%">
                                            <option value="">Select Country</option>
                                            <option value="1">India</option>
                                            <option value="2">UK</option>
                                            <option value="3">USA</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <!-- Button -->
                                    <button class="btn btn-primary" type="submit">
                                        Atualizar perfil
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".main-warp-container").addClass("full-screen-container");
    });
</script>