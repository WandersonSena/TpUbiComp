<div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center no-gutters min-vh-100">
        <div class="col-lg-5 col-md-8 py-8 py-xl-0">
            <!-- Card -->
            <div class="card shadow">
                <!-- Card body -->
                <div class="card-body p-6">
                    <div class="mb-4">
                        <h1 class="mb-1 font-weight-bold">Esqueci minha senha</h1>
                        <p>Informe seu email para recuperar a senha.</p>
                    </div>
                    <!-- Form -->
                    <form>
                        <!-- Email -->
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" class="form-control" name="email" placeholder="Informe seu Email " required="">
                        </div>
                        <!-- Button -->
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary btn-block">
                                Enviar senha
                            </button>
                        </div>
                        <span>Voltar para o <a href="/">Login</a></span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>